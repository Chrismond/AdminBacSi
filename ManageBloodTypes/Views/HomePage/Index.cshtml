            console.log("Không có tệp nào được chọn.");
            return;
        }

        // Kiểm tra xem tệp có phải là hình ảnh không
        if (!file.type.startsWith('image/')) {
            console.log("Tệp không phải là hình ảnh.");
            return;
        }

        var reader = new FileReader();

        reader.onload = function (e) {
            // Thay đổi hình ảnh chính sau khi người dùng chọn tệp
            var image = document.getElementById('mainImage');
            image.src = e.target.result;  // Cập nhật ảnh mới vào #mainImage

            // Hiển thị hình ảnh mới trong phần tử preview
            var preview = document.getElementById('imagePreview');
            preview.src = e.target.result;  // Cập nhật ảnh mới vào #imagePreview

            console.log("Hình ảnh đã được thay đổi.");
        };

        // Đọc tệp dưới dạng URL
        reader.readAsDataURL(file);
    });
</script>
