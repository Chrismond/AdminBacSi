@model IEnumerable<ManageBloodTypes.DBContext.tbHinhAnh>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>QUẢN LÝ HÌNH ẢNH</h1>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">DANH SÁCH CÁC HÌNH ẢNH</h5>
                        <a class="btn btn-success" href="/Admin/AHinhAnh/Create">THÊM MỚI</a>
                    </div>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Hình Ảnh
                                </th>
                                <th>
                                    Tiêu Đề
                                </th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                        <img src="@item.HinhAnh" width="180" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TieuDe)
                                </td>
                                <td>
                                    <a href="/Admin/AHinhAnh/Edit/@item.IDHinh"><i class="bi bi-pencil-square"></i></a> |
                                    <a href="/Admin/AHinhAnh/Details/@item.IDHinh"><i class="ri-article-line"></i></a> |
                                    <a href="/Admin/AHinhAnh/Delete/@item.IDHinh"><i class="ri-delete-bin-6-line"></i></a>
                                </td>
                            </tr>
                        }

                    </table>

                </div>


            </div>
        </div>
    </section>

</main>
