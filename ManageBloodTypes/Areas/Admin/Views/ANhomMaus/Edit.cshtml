@model ManageBloodTypes.DBContext.tbNhomMau

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>QUẢN LÝ THÔNG TIN NHÓM MÁU</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index">Home</a></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active">Elements</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">DANH SÁCH CÁC THÔNG TIN NHÓM MÁU</h5>

                        <!-- General Form Elements -->
                        <form action="/admin/ANhomMaus/edit" method="post" enctype="multipart/form-data">
                            @Html.HiddenFor(model => model.IDNhomMau)

                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Nhóm Máu</label>
                                <div class="col-sm-10">
                                    <input type="text" value="@Model.TenNhomMau" name="TenNhomMau" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Trạng Thái</label>
                                <div class="col-sm-2">
                                    <select id="hideSelect" class="form-select" name="Hide" aria-label="Default select example">
                                        @if (@Model.Hide == true)
                                        {
                                            <option value="default">Ẩn</option>
                                            <option value="true">Hiện</option>
                                        }
                                        else
                                        {
                                            <option value="default">Hiện</option>
                                            <option value="false">Ẩn</option>
                                        }
                                    </select>
                                </div>


                            </div>


                            <div class="row mb-3">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Cập Nhật</button>
                                    <a href="/Admin/ANhomMaus" class="btn btn-danger"> Quay Lại</a>
                                </div>
                            </div>


                        </form><!-- End General Form Elements -->

                    </div>
                </div>

            </div>


        </div>
    </section>

</main>

